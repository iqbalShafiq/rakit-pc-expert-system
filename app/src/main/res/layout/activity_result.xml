            android:id="@+id/tv_description"
            style="@style/Regular14Sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/tv_motherboard_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="PC ini akan memiliki keunggulan dalam melakukan desain grafis, bermain game, edit video, serta melakukan pekerjaan berat lainnya." />

